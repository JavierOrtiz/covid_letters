<h2>Lista de cartas</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
    <tr>
      <th>Titulo</th>
      <th>Autor</th>
      <th>Ciudad</th>
      <th>status</th>
      <th>Creado</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @letters.each do |letter| %>
      <tr class="<%= 'table-warning' if letter.pending? %> <%= 'table-danger' if letter.rejected? %>">
        <td><%= letter.title %></td>
        <td><%= letter.author_name %></td>
        <td><%= letter.author_city %></td>
        <td><%= letter.status %></td>
        <td><%= letter.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to "Revisar", mailman_letter_path(letter), class: "btn btn-xs btn-warning" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>